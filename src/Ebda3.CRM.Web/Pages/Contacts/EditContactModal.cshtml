@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Ebda3.CRM.Web.Pages.Contacts.EditContactModal

@{
    Layout = null;
}

<abp-dynamic-form abp-model="ContactViewModel"
                  asp-page="/Contacts/EditContactModal">
    <abp-modal>
        <abp-modal-header title="User: @Model.ContactViewModel.Email"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-form-content/>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>